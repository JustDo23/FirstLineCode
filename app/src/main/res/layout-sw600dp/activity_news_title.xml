<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal">

  <fragment
    android:id="@+id/frag_news_title"
    android:name="com.just.first.chapter04.NewsTitleFragment"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1" />

  <FrameLayout
    android:id="@+id/fl_news_content"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3">

    <fragment
      android:id="@+id/frag_news_content"
      android:name="com.just.first.chapter04.NewsContentFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  </FrameLayout>

</LinearLayout>
